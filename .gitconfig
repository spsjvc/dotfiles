    email = dragisaspasojevic@gmail.com
    name = Dragiša Spasojević

[core]
    editor = vi

[color]
    ui = true

[color "diff"]
    meta = yellow bold ul
    frag = cyan bold ul
    old = red bold
    new = green bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[alias]
    a = add
    b = checkout -b
    c = commit -m
    co = checkout
    d = diff
    ds = diff --staged
    f = fetch
    fpush = push --force
    l = log --graph --pretty=oneline --abbrev-commit
    p = add --patch
    r = reset HEAD
    s = status
    u = reset --soft HEAD^
