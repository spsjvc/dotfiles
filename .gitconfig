[user]
    email = git@spsjvc.com
    name = spsjvc

[core]
    editor = vim

[color]
    ui = true

[color "diff"]
    meta = yellow bold ul
    frag = cyan bold ul
    old = red bold
    new = green bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[alias]
    a = add
    b = checkout -b
    c = commit --allow-empty --gpg-sign -m
    co = checkout
    d = diff
    ds = diff --staged
    f = fetch
    fpush = push --force
    l = log --graph --pretty=oneline --abbrev-commit
    p = add --patch
    r = reset HEAD
    s = status
    u = reset --soft HEAD^

[commit]
    gpgsign = true

[init]
    defaultBranch = main
