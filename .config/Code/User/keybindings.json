[
  // Linux
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm",
    "when": "isLinux"
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.splitEditorRight",
    "when": "isLinux"
  },
  {
    "key": "ctrl+enter",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "isLinux"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.nextEditor",
    "when": "isLinux"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.previousEditor",
    "when": "isLinux"
  },
  // Mac
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm",
    "when": "isMac"
  },
  {
    "key": "cmd+shift+r",
    "command": "workbench.action.splitEditorRight",
    "when": "isMac"
  },
  {
    "key": "cmd+enter",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "isMac"
  },
  {
    "key": "cmd+j",
    "command": "workbench.action.nextEditor",
    "when": "isMac"
  },
  {
    "key": "cmd+k",
    "command": "workbench.action.previousEditor",
    "when": "isMac"
  },
  // Common
  {
    "key": "ctr+l",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  }
]
