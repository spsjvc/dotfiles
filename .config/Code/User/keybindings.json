[
  // Linux
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm",
    "when": "isLinux"
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.splitEditorRight",
    "when": "isLinux"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },
  // Mac
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm",
    "when": "isMac"
  },
  {
    "key": "cmd+shift+r",
    "command": "workbench.action.splitEditorRight",
    "when": "isMac"
  },
  {
    "key": "cmd+l",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  }
]
