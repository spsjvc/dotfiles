cursor-style = block
cursor-style-blink = false

font-family = CaskaydiaMono Nerd Font

# https://ghostty.org/docs/config/reference#shell-integration-features
shell-integration-features = no-cursor, title

# https://ghostty.org/docs/config/reference#window-decoration
window-decoration = server

window-padding-x = 8
window-padding-y = 8

##### Linux

# keep the systemd service running in the background for instant startup
#
# https://ghostty.org/docs/linux/systemd
quit-after-last-window-closed = false

##### macOS

macos-titlebar-style = hidden

##### Keybindings

# line continuation
keybind = shift+enter=text:\\\n
