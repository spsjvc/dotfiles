cursor-style = block
cursor-style-blink = false

font-family = CaskaydiaCove Nerd Font

# keep the systemd service running in the background for instant startup
#
# https://ghostty.org/docs/linux/systemd
quit-after-last-window-closed = false

# https://ghostty.org/docs/config/reference#shell-integration-features
shell-integration-features = no-cursor, title

# https://ghostty.org/docs/config/reference#window-decoration
window-decoration = server

window-padding-x = 8
window-padding-y = 8

# split navigation
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right

# split creation
keybind = alt+enter>h=new_split:left
keybind = alt+enter>j=new_split:down
keybind = alt+enter>k=new_split:up
keybind = alt+enter>l=new_split:right

# split close
keybind = alt+w=close_surface

# split equalize
keybind = alt+e=equalize_splits
